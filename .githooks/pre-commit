#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}Running pre-commit checks...${NC}"

# Check if we're in a Go project
if [ ! -f "go.mod" ]; then
    echo -e "${RED}‚úó Not a Go project (no go.mod found)${NC}"
    exit 1
fi

# Function to print status
print_status() {
    if [ $1 -eq 0 ]; then
        echo -e "${GREEN}‚úì $2${NC}"
    else
        echo -e "${RED}‚úó $2${NC}"
        return 1
    fi
}

# Track overall status
OVERALL_STATUS=0

echo -e "${BLUE}1. Checking Go formatting...${NC}"
if [ "$(gofmt -s -l . | wc -l)" -gt 0 ]; then
    echo -e "${RED}‚úó Code needs formatting. Files that need formatting:${NC}"
    gofmt -s -l .
    echo -e "${YELLOW}Run 'gofmt -s -w .' or 'make fmt' to fix${NC}"
    OVERALL_STATUS=1
else
    print_status 0 "Go formatting"
fi

echo -e "${BLUE}2. Running go vet...${NC}"
go vet ./...
VET_STATUS=$?
if ! print_status $VET_STATUS "go vet"; then
    OVERALL_STATUS=1
fi

echo -e "${BLUE}3. Running tests...${NC}"
go test -v ./...
TEST_STATUS=$?
if ! print_status $TEST_STATUS "tests"; then
    OVERALL_STATUS=1
fi

echo -e "${BLUE}4. Running staticcheck...${NC}"
if command -v staticcheck >/dev/null 2>&1; then
    staticcheck ./...
    STATICCHECK_STATUS=$?
    if ! print_status $STATICCHECK_STATUS "staticcheck"; then
        OVERALL_STATUS=1
    fi
else
    echo -e "${YELLOW}‚ö† staticcheck not installed, skipping (install with: go install honnef.co/go/tools/cmd/staticcheck@latest)${NC}"
fi

echo -e "${BLUE}5. Running gosec security scanner...${NC}"
if command -v gosec >/dev/null 2>&1; then
    gosec -severity medium -confidence medium -quiet ./...
    GOSEC_STATUS=$?
    if [ $GOSEC_STATUS -eq 0 ]; then
        print_status 0 "gosec security scan"
    else
        echo -e "${YELLOW}‚ö† gosec found security issues (non-blocking)${NC}"
    fi
else
    echo -e "${YELLOW}‚ö† gosec not installed, skipping (install with: go install github.com/securego/gosec/v2/cmd/gosec@latest)${NC}"
fi

# Final result
echo -e "\n${BLUE}Pre-commit check summary:${NC}"
if [ $OVERALL_STATUS -eq 0 ]; then
    echo -e "${GREEN}üéâ All checks passed! Commit allowed.${NC}"
    exit 0
else
    echo -e "${RED}‚ùå Some checks failed. Fix issues before committing.${NC}"
    echo -e "${YELLOW}Tip: Run 'make pre-commit' to run all checks manually${NC}"
    exit 1
fi